{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "dom"],
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./**/*.js",
    "./**/*.vue",
  ],
  "exclude": [
    "./dist/**/*"
  ]
}
